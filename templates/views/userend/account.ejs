<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/account.css" />
  </head>
  <body>
    <form id="account" method="post" enctype="multipart/form-data">
      <p class="header">Account Settings</p>

      <% if(typeof message != 'undefined') { %>
      <div
        style="margin: 0.75rem 1rem"
        id="error-div"
        class="alert alert-warning alert-dismissible fade show"
        role="alert"
      >
        <%= message %>
        <button
          style="padding: 0.87rem 1rem"
          id="error-btn"
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% CurrentUser.forEach((user) => { %>

      <div class="imgcontainer">
        <% if(user.profile){ %>

        <img
          id="display_img"
          src="/profilePicture/<%= user.profile%>"
          alt="Avatar"
          class="avatar"
        />
        <% } else { %>

        <img
          id="display_img"
          src="/img/nophoto.png"
          alt="Avatar"
          class="avatar"
        />

        <% } %>
      </div>
      <div class="change-option">
        <input
          style="display: none"
          type="file"
          accept="image/jpg, image/png, image/jpeg"
          id="file"
          name="avatar"
        />
        <label style="cursor: pointer" id="img-input" for="file"
          >upload a picture</label
        >
      </div>
      <div class="container">
        <label for="uname"><b>Username</b></label>

        <input
          type="text"
          id="username"
          onkeyup="charCount(this)"
          placeholder="username"
          name="username"
          value="<%= user.username %>"
        />

        <label
          id="message"
          style="
            font-size: 13px;
            display: flex;
            justify-content: end;
            margin: 5px 0;
          "
        >
          0//20
        </label>

        <% }) %>

        <label for="psw"><b>Country or Region</b></label>
        <input type="text" value="Bangladesh" readonly />

        <button id="btn-save" disabled type="submit">save</button>
      </div>

      <div class="container">
        <button style="cursor: normal" type="button" class="cancelbtn">
          <a style="text-decoration: none; color: #000" href="/user/account"
            >cancel</a
          >
        </button>
      </div>
    </form>
    <script>
      const account_form = document.querySelector("#account");
      const image_input = document.getElementById("file");
      const username = document.querySelector("input#username");
      const reader = new FileReader();

      document.getElementById("message").innerHTML =
        username.value.length + "/" + 20;

      function charCount(obj) {
        let max = 20;
        let currLength = obj.value.length;
        document.getElementById("message").innerHTML = currLength + "/" + max;

        if (currLength > max || currLength === 0) {
          document.getElementById(
            "message"
          ).innerHTML = `<span style="color : red"> ${currLength} out of ${max} character </span>`;
          document.getElementById("btn-save").disabled = true;
        } else {
          document.getElementById("message").innerHTML = currLength + "/" + max;
          document.getElementById("btn-save").disabled = false;
        }
      }

      image_input.addEventListener("change", function () {
        if (this.files && this.files[0]) {
          let display_image = document.querySelector("#display_img");
          reader.addEventListener("load", function () {
            display_image.setAttribute("src", reader.result);
          });

          reader.readAsDataURL(this.files[0]);
          document.getElementById("btn-save").disabled = false;
        }
      });

      /* event click for closing the error related div */
      const error_div = document.querySelectorAll("#error-btn");
      for (let index = 0; index < error_div.length; index++) {
        error_div[index].addEventListener("click", function () {
          this.parentNode.remove();
        });
      }
    </script>
  </body>
</html>
