<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Preview story</title>
    <link rel="stylesheet" href="/css/project/preview_story.css" />

    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="dashboard">
      <p>Project preview</p>
    </div>

    <div class="user_story_page">
      <div class="user_story_left_side">
        <div class="user_story_picture">
          <img
            id="ShowCover"
            src="../../images/userEnd/Mutual-Funds-2.jpg"
            alt="default"
          />
        </div>

        <div class="caption_of_story">
          <p id="title">ygigluoh</p>
        </div>

        <p
          style="
            margin: 30px 0 20px;
            text-align: left;
            font-weight: bold;
            font-size: 23px;
          "
        >
          Story
        </p>

        <div class="story_teller">
          <div class="user_profile">
            <span class="material-icons icons"> account_circle </span>
          </div>

          <div class="user_identity">
            <p class="username">Niloy Saha</p>
            <p class="identity">Identity Verified</p>
          </div>
        </div>

        <div id="mainStory" class="main_story"></div>
      </div>

      <div class="user_story_right_side">
        <div class="collected_money_section">
          <p class="amount_head">collected money</p>
          <p class="amount">৳ <label style="font-size: 22px"> 0 </label></p>

          <div class="progress">
            <progress id="file" value="0" max="100">0%</progress>
          </div>

          <p
            style="margin: 10px 0; color: rgb(134, 129, 129); font-weight: bold"
          >
            Goal : ৳ <label id="goal"> </label>
          </p>
        </div>

        <div class="remaining_days">
          <span class="days"> Remaining Days : </span>
          <span class="count">
            <label id="days" style="font-weight: bold; color: #000"></label>
          </span>
        </div>
      </div>
    </div>

    <script src="/js/createproject/generalsettings.js"></script>
    <script src="/js/createproject/previewPage.js"></script>
  </body>
</html>
