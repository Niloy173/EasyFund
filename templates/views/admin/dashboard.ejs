              <%}%>
      
             <%} %>
              </div>
    
              <div class="title">
                <h3>
                  <%= element["StoryTitle"] %>
                </h3>
              </div>
    
              <div class="category flex">
                <i class="ph-stack-thin"></i>
                <span><%= element["Category"] %></span>
              </div>
              <div class="flex amount-percent">
                <span class="amount">৳ <%= element["TargetAmount"] %></span>
                <p class="percent" id="percentage"></p>
              </div>
              <progress
                max="<%= element["TargetAmount"] %>"
                value="<%= element["CurrentAmount"] %>"
                class="progress"
                data-v-ba5a48cc=""
              ></progress>
            </div>
          </a>
            <% }); %>
        </div>
        <% } else{ %>

          <div class="message">
            <p >Currently There has been no transaction yet.Keep watching</p>


          </div>
          

       <%  } %>
    
    
    </section>
  </body>
  <script defer src="/js/homepage/percentage.js"></script>
  <script defer src="/js/admin/slider.js"></script>
  <script>
    function logout() {
    fetch("/admin-pannel/dashboard", {
      method: "DELETE",
    });

    setTimeout(() => {
    window.location.replace("/");
  }, 1000);
  }
  </script>
</html>
