<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <style>
    body{

      margin: 120px 0;
    }

    .message{

      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      border: 1px groove wheat;
      box-shadow: 8px 3px 15px rgba(255, 186, 186, 0.5);
      padding: 30px 18px;
    }

    .message p{

      text-align: center;
      font-size: 22px;
    }
  </style>
   <link rel="stylesheet" href="/css/admin.css" />
   <link rel="stylesheet" href="/css/card.css" />


   <script defer src="https://unpkg.com/phosphor-icons%22%3E"></script>
  <body>

    <div class="topnav">
      <a  href="/admin-pannel/dashboard">EasyFund</a>
      <a href="/all-projects">All projects</a>
      <a onclick="logout()" href="#">Logout</a>
    </div>

    <section class="second-container">

      <% if(Object.keys(data).length != 0){ %>
    
        <div class="card-list flex">
        
          <% data.forEach(element => { %>
          <a href="/admin-pannel/project/<%= element["_id"] %>">
            <div class="card-container">
              <img
              src="data:image/<%=element.CoverPicture.contentType%>;base64,
        <%=element.CoverPicture.data.toString('base64')%>"
                  alt="Sample"
              />
    
              <div class="title">
                <h3>
                  <%= element["StoryTitle"] %>
                </h3>
              </div>
    
              <div class="category flex">
                <i class="ph-stack-thin"></i>
                <span><%= element["Category"] %></span>
              </div>
              <div class="flex amount-percent">
                <span class="amount">à§³ <%= element["TargetAmount"] %></span>
                <p class="percent" id="percentage"></p>
              </div>
              <progress
                max="<%= element["TargetAmount"] %>"
                value="<%= element["CurrentAmount"] %>"
                class="progress"
                data-v-ba5a48cc=""
              ></progress>
            </div>
          </a>
            <% }); %>
        </div>
        <% } else{ %>

          <div class="message">
            <p >Currently There is no pending project Available.</p>


          </div>
          

       <%  } %>
    
    
    </section>
  </body>
  <script defer src="/js/homepage/percentage.js"></script>
  <script>
    function logout() {
    fetch("/admin-pannel/dashboard", {
      method: "DELETE",
    });

    setTimeout(() => {
    window.location.replace("/");
  }, 1000);
  }
  </script>
</html>
