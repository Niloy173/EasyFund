  <body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
      <h1>Easy Fund</h1>
      <div class="main-agileinfo">
        <div class="agileits-top">
          <form action="#" method="post">
            <% if(typeof message != 'undefined') { %>

            <label>
              <span id="msg" style="color: rgb(255, 255, 255); margin: 1em 0"
                ><%= message %></span
              >
            </label>

            <% } else { %>

            <label>
              <span
                id="msg"
                style="display: none; color: rgb(255, 255, 255); margin: 1em 0"
              ></span>
            </label>

            <% } %>
            <input
              class="text email"
              type="email"
              name="email"
              id="user-email"
              onkeyup="CheckEmail(this)"
              placeholder="Email"
              required=""
            />

            <input type="submit" value="SEND" />
          </form>
        </div>
      </div>
