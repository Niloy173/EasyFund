<form id="PreviewForm" method="post">
  <div class="dashboard">
    <p>Project preview</p>
  </div>

  <section class="story-section">
    <div class="project-area">
      <div class="head-container flex justify-center">
        <div class="left-area">
          <div class="user_story_picture">
          

            <figure>
           
              <img
              id="ShowCover"
              src="/coverPicture/<%= CoverPicture %>"
              alt="CoverPhoto"
              title="Cover Picture of The Story"
            />
             
          </figure>
          </div>
          <p class="caption_of_story"><%= StoryTitle %></p>
        </div>
        <div class="right-area">
          <div class="collected_money_section">
            <p class="amount_head">collected money</p>
            <p class="amount">৳ <label style="font-size: 22px"> 0 </label></p>

            <div class="progress">
              <progress id="file" value="0" max="100">0%</progress>
            </div>

            <p
              style="
                margin: 10px 0;
                color: rgb(134, 129, 129);
                font-weight: bold;
              "
            >
              Goal : ৳ <label id="goal"> <%= Amount %> </label>
            </p>
          </div>

          <div class="remaining_days">
            <span class="days"> Remaining Days : </span>
            <label id="project_validity"> <%= Validity %></label>
            <span class="count">
              <label id="days" style="font-weight: bold; color: #000"></label>
            </span>
          </div>
        </div>
      </div>
<div class="story-container flex justify-center column">
        <p
        style="
          margin: 30px 0 20px;
          text-align: left;
          font-weight: bold;
          font-size: 23px;
        "
      >
        Story
      </p>
      <div class="story_teller">
        <div class="user_profile">
          <img
          style="border-radius: 50%;object-fit: cover; width: 80px; height:80px; border: 1px solid black"
            src="data:image/<%=picture.contentType%>;base64,
            <%=picture.data.toString('base64')%>"
            alt="profilePic"
          />
        </div>

        <div class="user_identity">
          <p class="username"><%= fullname %></p>
          <p class="identity"><%= university %></p>
        </div>
      </div>
      <textarea
      style="font-family: system-ui; font-size: 18px; width: 100%;"
      readonly
      id="mainStory"
      class="main_story"
    >
    <%= MainStory %></textarea
    >

      <div>
        <% if(AttachmentLength) { %> <% Attachment.forEach((file) => { %>

          <div class="gallery">
            <Img
              src="/projectAttachment/<%= file %>"
              alt="<%= file %>"
              width="600"
              height="500"
            />
          </div>

          <% }) %> <% } %>
      </div>


      <div class="important-red-msg">
        <p>
          *** When you're creating a project, we hope you're aware of providing vaild
          Information moreover you do trust this system and beside that your project
          will be under monetizations for the next 24 hours. If your story gets
          accepted, It'll be under your project list Otherwise you should try it
          out again ***
        </p>
      </div>


    </div>

  </section>

  <div class="button_container">
    <hr />
    <div class="flex_container">
      <div class="left_btn_back">
        <button onclick="BackPressed()" type="button">
          <a style="text-decoration: none; color: #000" href="#">Back</a>
        </button>
      </div>
      <div class="right_btn_complete">
        <button type="submit">complete</button>
      </div>
    </div>
  </div>
</form>